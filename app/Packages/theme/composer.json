{
    "name": "platformcore/theme",
    "description": "Theme package",
    "type": "package",
    "autoload": {
        "psr-4": {
            "App\\Theme\\": "src"
        }
    },
    "require": {
        "platformcore/platform": "*@dev",
        "platformcore/sitemap": "*@dev",
        "platformcore/widget": "*@dev",
        "platformcore/slug": "*@dev",
        "platformcore/seo-helper": "*@dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "App\\Theme\\Providers\\ThemeServiceProvider",
                "App\\Theme\\Providers\\RouteServiceProvider"
            ],
            "aliases": {
                "Theme": "App\\Theme\\Facades\\Theme",
                "ThemeOption": "App\\Theme\\Facades\\ThemeOption",
                "ThemeManager": "App\\Theme\\Facades\\Manager",
                "AdminBar": "App\\Theme\\Facades\\AdminBar",
                "SiteMapManager": "App\\Theme\\Facades\\SiteMapManager"
            }
        }
    }
}
