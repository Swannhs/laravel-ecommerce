{
    "name": "platformcore/widget",
    "description": "Widget package",
    "type": "package",
    "autoload": {
        "psr-4": {
            "App\\Widget\\": "src"
        }
    },
    "require": {
        "platformcore/platform": "*@dev",
        "platformcore/theme": "*@dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "App\\Widget\\Providers\\WidgetServiceProvider"
            ],
            "aliases": {
                "Widget": "App\\Widget\\Facades\\Widget",
                "WidgetGroup": "App\\Widget\\Facades\\WidgetGroup"
            }
        }
    }
}
